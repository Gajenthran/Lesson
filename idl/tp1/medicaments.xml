    <composition>
      <principe_actif> Acéclofénac </principe_actif>
      <comprime unite="mg" forme="pellicule"> 100 </comprime>
    </composition>

    <pathologies>
      <pathologie> Arthrose </pathologie>
      <pathologie> Polyarthrite rhumatoïde </pathologie>
      <pathologie> Spondylarthrite ankylosante </pathologie>
    </pathologies>
  </medicament>

