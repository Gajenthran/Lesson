<medicaments>

  <medicament classe="Antalgique">
    <nom> Ibuprofene (Qualimed) </nom>
    <description> 30 comprimés enrobés sous plaquettes thermoformées (PVC/Aluminium) </description>
    <!-- <nomenclature_uicpa> acide 2-[4-(2-méthylpropyl)phényl]propanoïque </nomenclature_uicpa>
    <formule> C13H18O2 </formule> 
    <masse_mol unite="g/mol"> 206,2808 ± 0,0123 </masse_mol> -->
    <posologie unite="mg/jour"> 200 à 400 </posologie>

    <composition>
      <principe_actif> Ibuprofène </principe_actif>
      <comprime unite="mg" forme="enrobe"> 200 </comprime>
    </composition>

    <pathologies>
      <pathologie> Fièvre </pathologie>
      <pathologie> Douleur </pathologie>
    </pathologies>
  </medicament>


